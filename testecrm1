    <!-- JS – API + LÓGICA RESERVAS -->
    <script>
      // ================= API (Apps Script) =================

      const API_URL =
  "https://script.google.com/macros/s/AKfycbypupbDeWCmBAt3KkOOKahFuAldFlkEJ3yNirG8F70QsXnTMsvTLH6RK6Ivb7YrU25t/exec";

      function apiListarReservas() {
        return fetch(API_URL, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ action: "listarReservas", payload: {} }),
        })
          .then((r) => r.json())
          .then((data) => {
            if (!data || !data.success) {
              console.error("Erro listarReservas:", data && data.error);
              return [];
            }
            return data.reservas || [];
          })
          .catch((err) => {
            console.error("Erro listarReservas (fetch):", err);
            return [];
          });
      }

      function apiSalvarReserva(reserva) {
        return fetch(API_URL, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({
            action: "salvarReserva",
            payload: { reserva: reserva },
          }),
        })
          .then((r) => r.json())
          .then((data) => {
            if (!data || !data.success) {
              const msg = (data && data.error) || "Erro ao salvar reserva";
              console.error("Erro salvarReserva:", msg);
              throw new Error(msg);
            }
            return data.reserva;
          });
      }

      function apiObterReserva(id) {
        return apiListarReservas().then((lista) => {
          const numId = Number(id);
          return lista.find((r) => Number(r.id) === numId) || null;
        });
      }

      function apiListarCatalogo() {
        return fetch(API_URL, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ action: "listarCatalogo", payload: {} }),
        })
          .then((r) => r.json())
          .then((data) => {
            if (!data || !data.success) {
              console.error("Erro listarCatalogo:", data && data.error);
              return [];
            }
            return data.catalogo || [];
          })
          .catch((err) => {
            console.error("Erro listarCatalogo (fetch):", err);
            return [];
          });
      }

      window.CRMApi = {
        listarReservas: apiListarReservas,
        salvarReserva: apiSalvarReserva,
        obterReserva: apiObterReserva,
        listarCatalogo: apiListarCatalogo,
      };

      // ================= FRONT – Reservas =================

      (function () {
        const views = {
          reservas: document.getElementById("view-reservas"),
          contas: document.getElementById("view-contas"),
          calendario: document.getElementById("view-calendario"),
          email: document.getElementById("view-email"),
        };

        const viewTitle = document.getElementById("view-title");
        const navButtons = document.querySelectorAll(".nav-btn");
        const tabelaReservasBody =
          document.querySelector("#tabelaReservas tbody");
        const buscaReservasInput = document.getElementById("buscaReservas");

        const modalReserva = document.getElementById("modalReserva");
        const tituloModalReserva =
          document.getElementById("tituloModalReserva");
        const btnNovaReserva = document.getElementById("btnNovaReserva");
        const btnSalvarReserva = document.getElementById("btnSalvarReserva");
        const formReserva = document.getElementById("formReserva");
        const listaAcompanhantes =
          document.getElementById("listaAcompanhantes");
        const btnAdicionarAcompanhante = document.getElementById(
          "btnAdicionarAcompanhante"
        );
        const totalReservaDisplay =
          document.getElementById("totalReservaDisplay");

        const inputNascimentoTitular =
          document.getElementById("nascimentoTitular");
        const inputIdadeTitular = document.getElementById("idadeTitular");

        const tabelaServicosSelecionados = document.querySelector(
          "#tabelaServicosSelecionados tbody"
        );
        const btnToggleValoresInternos = document.getElementById(
          "btnToggleValoresInternos"
        );

        const modalServicos = document.getElementById("modalServicos");
        const servicosGrid = document.getElementById("servicosGrid");
        const buscaServicosInput = document.getElementById("buscaServicos");
        const btnEscolherServicos =
          document.getElementById("btnEscolherServicos");
        const btnAplicarServicos =
          document.getElementById("btnAplicarServicos");

        let reservaEmEdicao = null;
        let servicosTempSelecionados = [];
        let servicosDaReserva = [];
        let valoresInternosVisiveis = false;

        // Navegação
        navButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            const target = btn.getAttribute("data-view");
            navButtons.forEach((b) => b.classList.remove("active"));
            btn.classList.add("active");
            trocarView(target);
          });
        });

        function trocarView(view) {
          Object.keys(views).forEach((key) => {
            views[key].classList.toggle("view-active", key === view);
          });

          if (view === "reservas") viewTitle.textContent = "Central de Reservas";
          else if (view === "contas") viewTitle.textContent = "Contas";
          else if (view === "calendario")
            viewTitle.textContent = "Calendário";
          else if (view === "email")
            viewTitle.textContent = "E-mail prestador";
        }

        // Utils
        function formatarMoeda(v) {
          if (!v || isNaN(v)) return "AR$ 0,00";
          return (
            "AR$ " +
            Number(v).toLocaleString("pt-BR", {
              minimumFractionDigits: 2,
              maximumFractionDigits: 2,
            })
          );
        }

        function calcularIdade(dateStr) {
          if (!dateStr) return "";
          const hoje = new Date();
          const nascimento = new Date(dateStr + "T00:00:00");
          let idade = hoje.getFullYear() - nascimento.getFullYear();
          const m = hoje.getMonth() - nascimento.getMonth();
          if (m < 0 || (m === 0 && hoje.getDate() < nascimento.getDate())) {
            idade--;
          }
          return idade;
        }

        function abrirModal(id) {
          const el = document.getElementById(id);
          if (el) el.classList.add("open");
        }

        function fecharModal(id) {
          const el = document.getElementById(id);
          if (el) el.classList.remove("open");
        }

        document
          .querySelectorAll("[data-close-modal]")
          .forEach((el) => {
            el.addEventListener("click", () => {
              const id = el.getAttribute("data-close-modal");
              fecharModal(id);
            });
          });

        function obterTotalPaxAtual() {
          const qtdAcomp =
            listaAcompanhantes.querySelectorAll(".pax-card-acompanhante")
              .length;
          return 1 + qtdAcomp;
        }

        // Lista reservas
        function carregarReservas() {
          CRMApi.listarReservas().then((reservas) => {
            renderizarTabelaReservas(reservas);
          });
        }

        function renderizarTabelaReservas(reservas) {
          const termo = (buscaReservasInput.value || "").toLowerCase().trim();
          tabelaReservasBody.innerHTML = "";

          reservas
            .filter((r) => {
              if (!termo) return true;
              const alvo =
                (r.titular && r.titular.nome ? r.titular.nome : "") +
                " " +
                (r.hotel || "") +
                " " +
                (r.telefone || "");
              return alvo.toLowerCase().includes(termo);
            })
            .forEach((r) => {
              const tr = document.createElement("tr");

              const total =
                Array.isArray(r.servicos) && r.servicos.length
                  ? r.servicos.reduce((acc, s) => {
                      const pax = Number(s.qtdPax || r.totalPax || 1);
                      const valor = Number(s.precoPax || 0) * pax;
                      return acc + valor;
                    }, 0)
                  : 0;

              tr.innerHTML = `
                <td>${r.id || ""}</td>
                <td>${r.dataVenda || ""}</td>
                <td>${r.titular ? r.titular.nome || "" : ""}</td>
                <td>${r.hotel || ""}</td>
                <td>${r.telefone || ""}</td>
                <td>${r.totalPax || ""}</td>
                <td>${formatarMoeda(total)}</td>
                <td>
                  <button class="btn btn-xs btn-outline" data-editar-reserva="${
                    r.id
                  }">Editar</button>
                </td>
              `;
              tabelaReservasBody.appendChild(tr);
            });

          tabelaReservasBody
            .querySelectorAll("[data-editar-reserva]")
            .forEach((btn) => {
              btn.addEventListener("click", () => {
                const id = Number(btn.getAttribute("data-editar-reserva"));
                editarReserva(id);
              });
            });
        }

        buscaReservasInput.addEventListener("input", carregarReservas);

        // Nova / editar
        btnNovaReserva.addEventListener("click", novaReserva);

        function novaReserva() {
          reservaEmEdicao = null;
          tituloModalReserva.textContent = "Nova reserva";
          formReserva.reset();
          listaAcompanhantes.innerHTML = "";
          tabelaServicosSelecionados.innerHTML = "";
          totalReservaDisplay.textContent = formatarMoeda(0);
          servicosDaReserva = [];
          servicosTempSelecionados = [];

          const hoje = new Date();
          const yyyy = hoje.getFullYear();
          const mm = String(hoje.getMonth() + 1).padStart(2, "0");
          const dd = String(hoje.getDate()).padStart(2, "0");
          document.getElementById("dataVenda").value = `${yyyy}-${mm}-${dd}`;

          abrirModal("modalReserva");
        }

        function editarReserva(id) {
          CRMApi.obterReserva(id).then((reserva) => {
            if (!reserva) {
              alert("Reserva não encontrada");
              return;
            }
            reservaEmEdicao = reserva;
            preencherFormularioComReserva(reserva);
            abrirModal("modalReserva");
          });
        }

        function preencherFormularioComReserva(r) {
          tituloModalReserva.textContent = `Editar reserva #${r.id}`;
          formReserva.reset();
          listaAcompanhantes.innerHTML = "";
          tabelaServicosSelecionados.innerHTML = "";
          servicosDaReserva = Array.isArray(r.servicos) ? r.servicos.slice() : [];
          servicosTempSelecionados = [];

          document.getElementById("dataVenda").value = r.dataVenda || "";
          document.getElementById("telefone").value = r.telefone || "";
          document.getElementById("hotel").value = r.hotel || "";
          document.getElementById("nacionalidadeTitular").value =
            (r.titular && r.titular.nacionalidade) || "";

          document.getElementById("nomeTitular").value =
            (r.titular && r.titular.nome) || "";
          document.getElementById("tipoDocumentoTitular").value =
            (r.titular && r.titular.tipoDocumento) || "DNI";
          document.getElementById("numeroDocumentoTitular").value =
            (r.titular && r.titular.numeroDocumento) || "";
          document.getElementById("nascimentoTitular").value =
            (r.titular && r.titular.nascimento) || "";
          document.getElementById("idadeTitular").value =
            (r.titular && r.titular.idade) || "";

          if (Array.isArray(r.acompanhantes)) {
            r.acompanhantes.forEach((ac) => adicionarAcompanhante(ac));
          }

          renderizarTabelaServicos();
          atualizarTotalReserva();
        }

        // Titular: idade automática
        inputNascimentoTitular.addEventListener("change", () => {
          inputIdadeTitular.value =
            calcularIdade(inputNascimentoTitular.value) || "";
        });

        // Acompanhantes
        btnAdicionarAcompanhante.addEventListener("click", () =>
          adicionarAcompanhante()
        );

        function adicionarAcompanhante(acomp) {
          const card = document.createElement("div");
          card.className = "pax-card pax-card-acompanhante";

          const nome = (acomp && acomp.nome) || "";
          const tipoDocumento = (acomp && acomp.tipoDocumento) || "DNI";
          const numeroDocumento = (acomp && acomp.numeroDocumento) || "";
          const nascimento = (acomp && acomp.nascimento) || "";
          const idade = (acomp && acomp.idade) || "";
          const nacionalidade = (acomp && acomp.nacionalidade) || "";

          card.innerHTML = `
            <div class="pax-card-header">
              <span class="badge">Acompanhante</span>
              <button type="button" class="btn btn-xs" data-remover-acomp>Remover</button>
            </div>
            <div class="grid grid-2">
              <div class="field">
                <label>Nome completo</label>
                <input type="text" class="input" data-field="nome" value="${nome}" />
              </div>
              <div class="field">
                <label>Documento (tipo)</label>
                <select class="input" data-field="tipoDocumento">
                  <option value="DNI" ${tipoDocumento === "DNI" ? "selected" : ""}>DNI</option>
                  <option value="RG" ${tipoDocumento === "RG" ? "selected" : ""}>RG</option>
                  <option value="PASSAPORTE" ${
                    tipoDocumento === "PASSAPORTE" ? "selected" : ""
                  }>Passaporte</option>
                </select>
              </div>
              <div class="field">
                <label>Documento (nº)</label>
                <input type="text" class="input" data-field="numeroDocumento" value="${numeroDocumento}" />
              </div>
              <div class="field">
                <label>Data de nascimento</label>
                <input type="date" class="input" data-field="nascimento" value="${nascimento}" />
              </div>
              <div class="field">
                <label>Idade</label>
                <input type="number" class="input" data-field="idade" value="${idade}" readonly />
              </div>
              <div class="field">
                <label>Nacionalidade</label>
                <input type="text" class="input" data-field="nacionalidade" value="${nacionalidade}" />
              </div>
            </div>
          `;

          const btnRemover = card.querySelector("[data-remover-acomp]");
          btnRemover.addEventListener("click", () => {
            card.remove();
            atualizarTotalReserva();
          });

          const nascimentoInput = card.querySelector(
            '[data-field="nascimento"]'
          );
          const idadeInput = card.querySelector('[data-field="idade"]');

          nascimentoInput.addEventListener("change", () => {
            idadeInput.value = calcularIdade(nascimentoInput.value) || "";
          });

          listaAcompanhantes.appendChild(card);
        }

        function coletarDadosReservaDoForm() {
          const dataVenda = document.getElementById("dataVenda").value || "";
          const telefone = document.getElementById("telefone").value || "";
          const hotel = document.getElementById("hotel").value || "";
          const nacionalidadeTitular =
            document.getElementById("nacionalidadeTitular").value || "";

          const titular = {
            nome: document.getElementById("nomeTitular").value || "",
            tipoDocumento:
              document.getElementById("tipoDocumentoTitular").value || "",
            numeroDocumento:
              document.getElementById("numeroDocumentoTitular").value || "",
            nascimento:
              document.getElementById("nascimentoTitular").value || "",
            idade: document.getElementById("idadeTitular").value || "",
            nacionalidade: nacionalidadeTitular,
          };

          const acompanhantes = [];
          listaAcompanhantes
            .querySelectorAll(".pax-card-acompanhante")
            .forEach((card) => {
              const getField = (name) =>
                card.querySelector(`[data-field="${name}"]`).value || "";
              acompanhantes.push({
                nome: getField("nome"),
                tipoDocumento: getField("tipoDocumento"),
                numeroDocumento: getField("numeroDocumento"),
                nascimento: getField("nascimento"),
                idade: getField("idade"),
                nacionalidade: getField("nacionalidade"),
              });
            });

          const totalPax = 1 + acompanhantes.length;

          return {
            dataVenda,
            telefone,
            hotel,
            titular,
            acompanhantes,
            totalPax,
          };
        }

        // Serviços – catálogo
        btnEscolherServicos.addEventListener("click", () => {
          const totalPaxAtual = obterTotalPaxAtual();
          servicosTempSelecionados = servicosDaReserva.map((s) =>
            Object.assign({}, s)
          );
          carregarCatalogo(totalPaxAtual);
        });

        function carregarCatalogo(totalPaxPadrao) {
          CRMApi.listarCatalogo().then((catalogo) => {
            renderizarCatalogo(catalogo, totalPaxPadrao);
            abrirModal("modalServicos");
          });
        }

        function renderizarCatalogo(catalogo, totalPaxPadrao) {
          servicosGrid.innerHTML = "";
          const termo = (buscaServicosInput.value || "").toLowerCase().trim();

          catalogo
            .filter((item) => {
              if (!termo) return true;
              const alvo =
                (item.atividade || "") +
                " " +
                (item.categoria || "") +
                " " +
                (item.prestador || "");
              return alvo.toLowerCase().includes(termo);
            })
            .forEach((item) => {
              const card = document.createElement("div");
              card.className = "servico-card";
              card.dataset.idCatalogo = item.id;

              const existente = servicosTempSelecionados.find(
                (s) => s.idCatalogo === item.id
              );
              const qtdPax = existente
                ? existente.qtdPax || totalPaxPadrao
                : totalPaxPadrao;

              if (existente) {
                card.classList.add("selected");
              }

              card.innerHTML = `
                <div class="servico-card-header">
                  <div class="servico-card-titulo">
                    ${item.atividade || ""}
                  </div>
                  <div class="servico-card-preco">
                    ${formatarMoeda(item.precoPax || 0)}
                  </div>
                </div>
                <div class="servico-card-meta">
                  ${item.categoria || ""} · ${item.prestador || ""}
                </div>
                <div class="servico-card-meta">
                  Comissão: ${formatarMoeda(item.comissao || 0)} · Prestador: ${formatarMoeda(item.precoPrestador || 0)}
                </div>
                <div class="servico-card-footer">
                  <span>PAX</span>
                  <input type="number" min="0" class="input" value="${qtdPax}" />
                </div>
              `;

              const inputQtd = card.querySelector("input[type='number']");

              function syncSelecionado() {
                let selecionado = servicosTempSelecionados.find(
                  (s) => s.idCatalogo === item.id
                );
                let qtd = Number(inputQtd.value);
                if (isNaN(qtd) || qtd < 0) qtd = 0;
                inputQtd.value = qtd;

                if (!selecionado && card.classList.contains("selected")) {
                  selecionado = {
                    idCatalogo: item.id,
                    atividade: item.atividade,
                    categoria: item.categoria,
                    precoPax: Number(item.precoPax || item.precoPax || 0),
                    comissao: Number(item.comissao || 0),
                    precoPrestador: Number(item.precoPrestador || 0),
                    prestador: item.prestador || "",
                    qtdPax: qtd,
                  };
                  servicosTempSelecionados.push(selecionado);
                } else if (selecionado) {
                  selecionado.qtdPax = qtd;
                }
              }

              card.addEventListener("click", (ev) => {
                if (ev.target === inputQtd) return;
                const id = item.id;
                const idx = servicosTempSelecionados.findIndex(
                  (s) => s.idCatalogo === id
                );
                if (idx >= 0) {
                  servicosTempSelecionados.splice(idx, 1);
                  card.classList.remove("selected");
                } else {
                  card.classList.add("selected");
                  syncSelecionado();
                }
              });

              inputQtd.addEventListener("change", () => {
                if (!card.classList.contains("selected")) {
                  card.classList.add("selected");
                }
                syncSelecionado();
              });

              servicosGrid.appendChild(card);
            });
        }

        buscaServicosInput.addEventListener("input", () => {
          // Recarrega catálogo mantendo seleção
          const totalPaxAtual = obterTotalPaxAtual();
          CRMApi.listarCatalogo().then((catalogo) => {
            renderizarCatalogo(catalogo, totalPaxAtual);
          });
        });

        btnAplicarServicos.addEventListener("click", () => {
          servicosDaReserva = servicosTempSelecionados.map((s) =>
            Object.assign({}, s)
          );
          renderizarTabelaServicos();
          atualizarTotalReserva();
          fecharModal("modalServicos");
        });

        function renderizarTabelaServicos() {
          tabelaServicosSelecionados.innerHTML = "";
          servicosDaReserva.forEach((s, idx) => {
            const tr = document.createElement("tr");
            tr.innerHTML = `
              <td>${(s.atividade || "")} - ${(s.categoria || "")}</td>
              <td>${s.qtdPax || 0}</td>
              <td>${formatarMoeda(s.precoPax || 0)}</td>
              <td class="col-interna">${formatarMoeda(s.comissao || 0)}</td>
              <td class="col-interna">${s.prestador || ""}</td>
              <td>
                <button class="btn btn-xs btn-outline" data-remover-servico="${idx}">Remover</button>
              </td>
            `;
            tabelaServicosSelecionados.appendChild(tr);
          });

          tabelaServicosSelecionados
            .querySelectorAll("[data-remover-servico]")
            .forEach((btn) => {
              btn.addEventListener("click", () => {
                const i = Number(btn.getAttribute("data-remover-servico"));
                servicosDaReserva.splice(i, 1);
                renderizarTabelaServicos();
                atualizarTotalReserva();
              });
            });

          if (!valoresInternosVisiveis) {
            tabelaServicosSelecionados.parentElement.classList.add(
              "valores-internos-hidden"
            );
          } else {
            tabelaServicosSelecionados.parentElement.classList.remove(
              "valores-internos-hidden"
            );
          }
        }

        function atualizarTotalReserva() {
          const total = servicosDaReserva.reduce((acc, s) => {
            const qtd = Number(s.qtdPax || 0);
            const valor = Number(s.precoPax || 0);
            return acc + qtd * valor;
          }, 0);
          totalReservaDisplay.textContent = formatarMoeda(total);
        }

        btnToggleValoresInternos.addEventListener("click", () => {
          valoresInternosVisiveis = !valoresInternosVisiveis;
          renderizarTabelaServicos();
        });

        // Salvar reserva
        btnSalvarReserva.addEventListener("click", () => {
          const base = coletarDadosReservaDoForm();

          const reservaPayload = {
            id: reservaEmEdicao ? reservaEmEdicao.id : null,
            dataVenda: base.dataVenda,
            telefone: base.telefone,
            hotel: base.hotel,
            titular: base.titular,
            acompanhantes: base.acompanhantes,
            servicos: servicosDaReserva.slice(),
            totalPax: base.totalPax,
          };

          btnSalvarReserva.disabled = true;
          btnSalvarReserva.textContent = "Salvando...";

          CRMApi.salvarReserva(reservaPayload)
            .then(() => {
              btnSalvarReserva.disabled = false;
              btnSalvarReserva.textContent = "Salvar reserva";
              fecharModal("modalReserva");
              carregarReservas();
            })
            .catch((err) => {
              console.error(err);
              btnSalvarReserva.disabled = false;
              btnSalvarReserva.textContent = "Salvar reserva";
              alert("Erro ao salvar reserva: " + err.message);
            });
        });

        // Inicializa
        carregarReservas();
      })();
    </script>
  </body>
</html>
